             x:Class="App02_TipoPaginaXF.PageType.Carousel.PageType3"
             BackgroundColor="LightSkyBlue">
    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand" >
            <Label Text="Tipo de Página" TextColor="Blue" HorizontalOptions="CenterAndExpand" />
