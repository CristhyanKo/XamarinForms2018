<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App02_TipoPaginaXF.PageType.Navigation.Page1"
             Title="Titulo da Content Page">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Pesquisa" Icon="xamarinLogo.png"/>
        <ToolbarItem Text="Detalhes" Icon="xamarinLogo.png"/>
        <ToolbarItem Text="Ordenar" Icon="xamarinLogo.png"/>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Eu sou uma Content Page"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />

            <Button Text="Chamar Modal" Clicked="ChamarModal"/>
            <Button Text="Ir para página 2" Clicked="IrParaPagina2"/>
            <Button Text="Chamar Master" Clicked="ChamarMaster"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>